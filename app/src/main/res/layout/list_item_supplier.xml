<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dim_8"
    android:layout_marginBottom="@dimen/dim_8"
    android:clipChildren="true"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_16"
            android:layout_marginTop="@dimen/dim_8"
            android:fontFamily="@font/poppins_regular"
            android:text="Rahul"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="@dimen/dim_24"
            android:layout_height="@dimen/dim_24"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dim_8"
            android:layout_marginRight="@dimen/dim_16"
            android:src="@drawable/icon_edit" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="@dimen/dim_8"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_margin="@dimen/dim_16"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_company_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_8"
                android:fontFamily="@font/poppins_regular"
                android:text="Company"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_company_tag"
                android:fontFamily="@font/poppins_regular"
                android:text="New IT Dev"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tv_company"
                android:layout_marginTop="@dimen/dim_4"
                android:background="@color/light_grey_2" />

            <TextView
                android:id="@+id/tv_address_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_company"
                android:layout_marginTop="@dimen/dim_16"
                android:layout_marginRight="@dimen/dim_16"
                android:fontFamily="@font/poppins_regular"
                android:text="Address"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_address_tag"
                android:layout_marginRight="@dimen/dim_16"
                android:fontFamily="@font/poppins_regular"
                android:text="20 * 40"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tv_address"
                android:layout_marginTop="@dimen/dim_4"
                android:background="@color/dark_grey" />


            <TextView
                android:id="@+id/tv_mobile_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_address"
                android:layout_marginTop="@dimen/dim_16"
                android:layout_marginRight="@dimen/dim_16"
                android:layout_toLeftOf="@+id/view"
                android:fontFamily="@font/poppins_regular"
                android:text="Mobile"
                android:textColor="@color/dark_grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mobile_tag"
                android:layout_marginRight="@dimen/dim_16"
                android:fontFamily="@font/poppins_regular"
                android:text="1234567890"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:id="@+id/view"
                android:layout_width="0.5dp"
                android:layout_height="@dimen/dim_46"
                android:layout_below="@+id/tv_address"
                android:layout_marginTop="@dimen/dim_16"
                android:layout_toRightOf="@+id/tv_mobile"
                android:background="@color/dark_grey" />

            <TextView
                android:id="@+id/tv_email_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_address"
                android:layout_marginLeft="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_16"
                android:layout_toRightOf="@+id/view"
                android:fontFamily="@font/poppins_regular"
                android:text="Email"
                android:textColor="@color/dark_grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_email_tag"
                android:layout_marginLeft="@dimen/dim_16"
                android:layout_toRightOf="@+id/view"
                android:fontFamily="@font/poppins_regular"
                android:text="demo124@gmail.com"
                android:textColor="@color/black"
                android:textSize="16sp" />


        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>
