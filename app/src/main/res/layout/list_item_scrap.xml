<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dim_8"
    android:layout_marginBottom="@dimen/dim_8"
    android:clipChildren="true"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_sku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_16"
            android:layout_marginTop="@dimen/dim_8"
            android:fontFamily="@font/poppins_regular"
            android:text="brand of Battery"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="@dimen/dim_32"
            android:layout_height="@dimen/dim_32"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dim_8"
            android:src="@drawable/icon_menu" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_sku"
            android:layout_marginTop="@dimen/dim_8"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:id="@+id/rl_image"
            android:layout_width="@dimen/dim_120"
            android:layout_height="@dimen/dim_120"
            android:layout_below="@+id/tv_sku"
            android:layout_marginLeft="@dimen/dim_16"
            android:layout_marginTop="@dimen/dim_16"
            android:layout_marginBottom="@dimen/dim_16"
            android:background="@drawable/border_rectangle_color_primary"
            android:padding="@dimen/dim_4">

            <ImageView
                android:id="@+id/img_battery"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sku"
            android:layout_margin="@dimen/dim_16"
            android:layout_toRightOf="@+id/rl_image"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_brand_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="brand"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_brand_tag"
                android:fontFamily="@font/poppins_regular"
                android:text="Battery Brand Name"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tv_brand"
                android:layout_marginTop="@dimen/dim_4"
                android:background="@color/light_grey_2" />

            <TextView
                android:id="@+id/tv_size_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_brand"
                android:layout_marginTop="@dimen/dim_16"
                android:layout_marginRight="@dimen/dim_16"
                android:fontFamily="@font/poppins_regular"
                android:text="size"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_size_tag"
                android:layout_marginRight="@dimen/dim_16"
                android:fontFamily="@font/poppins_regular"
                android:text="20 * 40"
                android:textColor="@color/black"
                android:textSize="16sp" />


        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>
