<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_8"
    android:clipChildren="true"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim_16">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_brand_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_8"
                android:fontFamily="@font/poppins_regular"
                android:text="Brand Name"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_brand_tag"
                android:layout_toLeftOf="@+id/img_edit"
                android:fontFamily="@font/poppins_regular"
                android:text="New IT Dev"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="@dimen/dim_24"
                android:layout_height="@dimen/dim_24"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dim_8"
                android:src="@drawable/icon_edit" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tv_brand"
                android:layout_marginTop="@dimen/dim_4"
                android:background="@color/light_grey_2" />

            <TextView
                android:id="@+id/tv_status_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_brand"
                android:layout_marginTop="@dimen/dim_16"
                android:layout_marginRight="@dimen/dim_16"
                android:fontFamily="@font/poppins_regular"
                android:text="Status"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_status_tag"
                android:layout_marginRight="@dimen/dim_16"
                android:fontFamily="@font/poppins_regular"
                android:text="Active"
                android:textColor="@color/black"
                android:textSize="16sp" />


        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>
